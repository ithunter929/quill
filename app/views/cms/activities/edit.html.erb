<article class="activity-form simple-rounded-box">
  <div>
    <a href="/">Staff Profile</a>
    /
    <a href=<%= activity_editor_link %>>Activity Editor</a>
    /
    <a href=<%= activity_classification_link %>><%= @activity_classification.name %></a>
    /
    <a href=<%= activity_link %>><%= @activity["name"] %></a>
  </div>
  <%= render 'form' %>
</article>
